# General movement
def_key "h"
    previous_column
def_key "j"
    scroll_down
def_key "k"
    scroll_up
def_key "l"
    next_column
def_key "g"
    move_home
def_key "G"
    move_end

# Finding
def_key "/"
    find
def_key "/"
    find_item_forward
def_key "n"
    next_found_item
def_key "N"
    previous_found_item

# Playlist
def_key "."
    show_lyrics
def_key "J"
    move_sort_order_down
def_key "K"
    move_sort_order_up
def_key "l"
    play_item

# File browser
def_key "h"
  jump_to_parent_directory
def_key "l"
  enter_directory

# Buffers
def_key "m"
  show_media_library
def_key "m"
  toggle_media_library_columns_mode
def_key "t"
  show_tag_editor
def_key "v"
  show_visualizer
