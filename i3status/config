general {
    output_format = "i3bar"
    colors = true
    interval = 5
  }

order += "ethernet _first_"
order += "wireless _first_"
order += "path_exists VPN"
order += "battery 0"
order += "tztime local"

tztime local {
  format = "%a %d. %m. %Y - %H:%M"
  }

battery 0 {
  format = "%status: %percentage"

  last_full_capacity = true

  threshold_type = time
  low_threshold = 10
  }

ethernet _first_ {
  format_up = "eth: %ip"
  format_down = "eth: none"
  }

wireless _first_ {
  format_up = "wifi: %ip/%essid"
  format_down = "wifi: none"
  }

path_exists VPN {
  path = "/proc/sys/net/ipv4/conf/tun0"
  format = "%title: %status"
}
